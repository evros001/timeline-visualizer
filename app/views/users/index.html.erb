<h1>Cool People</h1>

<ul class="index-list">
  <% @users.each do |user| %>
    <li><%= user.name.upcase %><br> 
    <span class="index-description">Sample Location: <%=user.locations.first.name %> - <%=user.locations.first.description %><br></span>
      <% if user_signed_in? && current_user.id == user.id %>
        <%= link_to "Add Story", new_user_story_path(user.id) %>
      <% end %>
      <%= link_to "View #{user.name.capitalize}'s Stories", user_path(user.id) %></li>
  <% end %>
</ul>
