<h1>All the Users:</h1>

<ul>
  <% @users.each do |user| %>
    <li>ID: <%= user.id %> | Name: <%= user.name.capitalize %> | Email: <%= user.email %> |
      <%= link_to "ADD LOCATION for #{user.name.capitalize}", new_user_location_path(user.id) %> |
      <%= link_to "VIEW LOCATIONS for #{user.name.capitalize}", user_path(user.id) %><br><br></li>
  <% end %>
</ul>
