<h1>All The Users</h1>

<!-- LIST OF USERS: -->
<ul>
  <% @users.each do |user| %>
    <li>name: <%= user.name %> | id: <%= user.id %> |
      <%= link_to "ADD LOCATION FOR #{user.name}", new_user_location_path(user.id) %> |
      <%= link_to "SEE ALL #{user.name}'s LOCATIONS", user_path(user.id) %> </li>
  <% end %>
</ul>

