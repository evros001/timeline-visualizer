<div class="users_index">
  <h1>Cool People</h1>

  <ul class="index-list">
    <% @users.each do |user| %>

      <li><%= user.name.upcase %><br>

      <span class="index-description">
        <% if user.stories.first %>
          Sample Story: <%= user.stories.first.name %> - <%=user.stories.first.description %><br>
      </span>
        <% else %>

          This user has no stories. Weird.<br></span>
        <% end %>
          <%= link_to "View all of #{user.name.capitalize}'s Stories", user_path(user.id) %>
        </li>
    <% end %>
  </ul>
</div>
